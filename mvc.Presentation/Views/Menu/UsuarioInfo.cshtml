@{
    var nombre = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? "Usuario";
    var rol = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Sin rol";
}

<div class="d-flex align-items-center p-3 bg-primary text-white rounded mb-3">
    <i class="bi bi-person-circle fs-3 me-2"></i>
    <div>
        <div class="fw-bold">@nombre</div>
        <small class="text-light">@rol</small>
    </div>
</div>
