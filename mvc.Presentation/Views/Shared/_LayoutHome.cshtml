<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Mi Sistema</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            overflow-x: hidden;
            margin: 0;
        }

    </style>
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <nav class="sidebar p-3 pt-12 pb-12">
            @await Component.InvokeAsync("Siderbar")
        </nav>

        <!-- Main section with header and content -->
        <div class="main-section">
            <!-- Header (solo encima del contenido) -->
            <header class="top-bar m-4">
                @await Component.InvokeAsync("UsuarioInfo")
            </header>

            <!-- Main content -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
