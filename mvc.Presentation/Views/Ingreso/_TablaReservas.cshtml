@using System.Collections.ObjectModel
@using SR.Entities.BaseEntities.ReservaEntities
@model ObservableCollection<Reserva>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="table-light body-02-semibold">
            <tr>
                <th>Cliente</th>
                <th>Cancha</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th>Monto Pagado</th>
                <th>Tipo de Pago</th>
                <th>Estado</th>
                <th>Usuario</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.NombreCliente</td>
                        <td>@r.NombreCancha</td>
                        <td>@(r.HoraInicio != null ? r.HoraInicio.Value.ToString(@"hh\:mm") : "-")</td>
                        <td>@(r.HoraFin != null ? r.HoraFin.Value.ToString(@"hh\:mm") : "-")</td>
                        <td>S/ @r.MontoTotal?.ToString("0.00")</td>
                        <td>@r.TipoPago</td>
                        <td>@r.Estado</td>
                        <td>@r.UsuarioNombre</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted py-4">
                        <i class="bi bi-info-circle"></i> No se encontraron registros.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
